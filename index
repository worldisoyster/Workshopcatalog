            <!-- Workshop cards will be inserted here by JavaScript -->
        </section>

        <!-- ========================================
             STATS SECTION - RARELY CHANGED
        ======================================== -->
        <section class="stats-section">
            <div class="stats-grid">
                <div class="stat-item">
